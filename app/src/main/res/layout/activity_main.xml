<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.hikerswatch.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hikerbackground"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        android:text="Hiker's Watch"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Latitude: 12.23"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/latTextView"
        android:layout_below="@+id/latTextView"
        android:text="Longitude: 85.57"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/accTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/longTextView"
        android:layout_below="@+id/longTextView"
        android:layout_marginTop="21dp"
        android:text="Accuracy: 12.23"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/accTextView"
        android:layout_below="@+id/accTextView"
        android:layout_marginTop="23dp"
        android:text="Altitude: 12.23"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/addTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/altTextView"
        android:layout_below="@+id/altTextView"
        android:layout_marginTop="20dp"
        android:text="Address: "
        android:textColor="#000000"/>

</RelativeLayout>
